/* component/pattern/pattern.wxss */
.pattern-wrapper{
  width: 100%;
  height: 100px;
  border-radius: 10px;
  background: #eee4da;
  color: #776e65;
  display: flex;
  justify-content: space-between;
  position: relative;
  margin-bottom: 20px;
}
.pattern-wrapper:active{
  background: #ede0c8;
}
.pattern-name{
  display: block;
  line-height: 100px;
  width: 60%;
  height: 100%;
  font-size: 30px;
  font-weight: bold;
  padding-left: 20px;
  padding-right: 20px;
  box-sizing: border-box;
}

.pattern-score-wrapper{
  width: 40%;
  height: 100%;
  display:flex;
  flex-direction:column;
  justify-content:center;
}
.pattern-score::before{
  content: "score:";
  font-size: 20px;
  color: #cdc1b4;
}
.pattern-best::before{
  content: "best:";
  font-size: 20px;
  color: #cdc1b4;
}
.pattern-wrapper .closed{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  color: #FFF;
  opacity: 0.7;
  border-radius: 10px;
}
.pattern-wrapper .closed text{
  display: block;
  font-size: 40px;
  font-weight: bold;
  width: 100%;
  line-height: 100px;
  text-align: center;
}